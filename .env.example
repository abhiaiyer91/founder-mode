# ============================================
# FOUNDER MODE - Environment Variables
# Copy this to .env and fill in your values
# ============================================

# Database (PostgreSQL)
# For local dev: Use docker-compose.yml to start PostgreSQL
# For production: Use a managed PostgreSQL service (Vercel Postgres, Supabase, etc.)
DATABASE_URL=postgres://founder:founder123@localhost:5432/founder_mode

# OpenAI API Key (for AI features)
# Get one at: https://platform.openai.com/api-keys
# Note: Users can also add their own key in the Settings screen (persisted locally)
OPENAI_API_KEY=sk-your-key-here

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend API URL
# Local: http://localhost:3001
# Production: https://your-api-domain.com
VITE_API_URL=http://localhost:3001

# GitHub OAuth (for code pushing and repo access)
# Create an OAuth app at: https://github.com/settings/developers
# Homepage URL: http://localhost:5173 (dev) or your production URL
# Authorization callback URL: http://localhost:3001/api/oauth/github/callback (dev)
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=http://localhost:3001/api/oauth/github/callback
FRONTEND_URL=http://localhost:5173

