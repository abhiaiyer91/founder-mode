{
  "name": "founder-mode",
  "version": "0.1.0",
  "description": "A startup simulation game where your AI team builds real software",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "pnpm db:push && concurrently \"vite --open\" \"tsx watch server/index.ts\"",
    "dev": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "tsc -b && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start:server": "node dist-server/index.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "^2.20.0",
    "@git-diff-view/lowlight": "^0.0.35",
    "@git-diff-view/react": "^0.0.35",
    "@mastra/core": "beta",
    "@mastra/memory": "beta",
    "@mastra/server": "beta",
    "better-auth": "^1.4.10",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "openai": "^6.15.0",
    "phaser": "^3.90.0",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.11.0",
    "serve": "^14.2.5",
    "uuid": "^11.0.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.4.0",
    "tsx": "^4.21.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "game",
    "simulation",
    "startup",
    "ai",
    "tui",
    "terminal"
  ]
}
